@page "/profile"

<div class="profile-container">
    <div class="profile-header">
        <img src="https://via.placeholder.com/150" alt="Profil Fotoğrafı" class="profile-photo">
        <h2>@userName</h2>
    </div>
    <div class="profile-details">
        <div class="profile-item">
            <label>Kullanıcı Adı:</label>
            <span>@userName</span>
        </div>
        <div class="profile-item">
            <label>Email:</label>
            <span>@userEmail</span>
        </div>
        <div class="profile-item">
            <label>Telefon:</label>
            <span>@userPhone</span>
        </div>
        <div class="profile-item">
            <label>Biyografi:</label>
            <span>@userBio</span>
        </div>
        <button @onclick="EditProfile" class="edit-button">Düzenle</button>
    </div>

    @if (isEditing)
    {
        <div class="edit-form">
            <h3>Profili Düzenle</h3>
            <div class="form-group">
                <label for="edit-username">Kullanıcı Adı</label>
                <input type="text" id="edit-username" class="form-control" @bind="editUserName">
            </div>
            <div class="form-group">
                <label for="edit-email">Email</label>
                <input type="email" id="edit-email" class="form-control" @bind="editUserEmail">
            </div>
            <div class="form-group">
                <label for="edit-phone">Telefon</label>
                <input type="text" id="edit-phone" class="form-control" @bind="editUserPhone">
            </div>
            <div class="form-group">
                <label for="edit-bio">Biyografi</label>
                <textarea id="edit-bio" class="form-control" @bind="editUserBio"></textarea>
            </div>
            <button @onclick="SaveProfile" class="save-button">Kaydet</button>
            <button @onclick="CancelEdit" class="cancel-button">İptal</button>
        </div>
    }
</div>

@code {
    private string userName = "Kullanıcı Adı";
    private string userEmail = "kullanici@example.com";
    private string userPhone = "123-456-7890";
    private string userBio = "Kısa biyografi metni...";
    
    private bool isEditing = false;
    private string editUserName;
    private string editUserEmail;
    private string editUserPhone;
    private string editUserBio;

    private void EditProfile()
    {
        isEditing = true;
        editUserName = userName;
        editUserEmail = userEmail;
        editUserPhone = userPhone;
        editUserBio = userBio;
    }

    private void SaveProfile()
    {
        userName = editUserName;
        userEmail = editUserEmail;
        userPhone = editUserPhone;
        userBio = editUserBio;
        isEditing = false;
    }

    private void CancelEdit()
    {
        isEditing = false;
    }
}

