@page "/profile"

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-picture">
            <img src="path-to-your-profile-picture.jpg" alt="Profil Resmi">
        </div>
        @if (!isEditing)
        {
            <div class="profile-view">
                <h2>Profil Bilgileri</h2>
                <div class="profile-info">
                    <p><strong>Kullanıcı Adı:</strong> <span>@username</span></p>
                    <p><strong>Email:</strong> <span>@email</span></p>
                    <p><strong>Biyografi:</strong> <span>@bio</span></p>
                </div>
                <button @onclick="ToggleEditMode" class="edit-button">Düzenle</button>
            </div>
        }
        else
        {
            <div class="profile-edit">
                <h2>Profil Düzenle</h2>
                <form>
                    <div class="form-group">
                        <label for="username">Kullanıcı Adı</label>
                        <input type="text" id="username" class="form-control" @bind="@username">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" @bind="@email">
                    </div>
                    <div class="form-group">
                        <label for="bio">Biyografi</label>
                        <textarea id="bio" class="form-control" @bind="@bio"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="save-button">Bilgileri Güncelle</button>
                    </div>
                </form>
                <button @onclick="ToggleEditMode" class="cancel-button">İptal</button>
            </div>
        }
    </div>
</div>

<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #f0f4f8; /* Soft light background */
    }

    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 300px;
        border: 2px solid #d0e4f1; /* Soft blue border */
        text-align: center;
    }

    .profile-picture {
        position: absolute;
        top: 20px;
        left: 20px;
        width: 150px;
        height: 150px;
        overflow: hidden;
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .profile-picture img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-card h2 {
        margin-top: 180px;
        margin-bottom: 20px;
        color: #2a4d69; /* Soft blue text color */
    }

    .profile-info p {
        margin: 10px 0;
    }

    .edit-button, .cancel-button {
        width: 100%;
        padding: 10px;
        background-color: #4C9EFF; /* Soft blue button */
        border: none;
        color: white;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 15px;
    }

    .edit-button:hover, .cancel-button:hover {
        background-color: #3b8dd1;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: box-shadow 0.3s ease-in-out;
    }

    .form-control:focus {
        outline: none;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.8);
    }

    .save-button {
        width: 100%;
        padding: 10px;
        background-color: #4C9EFF; /* Soft blue button */
        border: none;
        color: white;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
    }

    .save-button:hover {
        background-color: #3b8dd1;
    }
</style>

@code {
    private bool isEditing = false;
    private string username = "Kullanıcı Adı";
    private string email = "email@example.com";
    private string bio = "Kısa bir biyografi";

    private void ToggleEditMode()
    {
        isEditing = !isEditing;
    }
}
