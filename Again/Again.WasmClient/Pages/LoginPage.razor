@page "/login"

<div class="container">
    <!-- Arka planda animasyonu tam ekran kaplayacak şekilde yerleştiriyoruz -->
    <iframe class="background-animation" src="https://my.spline.design/bubble-0360469fcf057a71378477983e5d24db/" frameborder="0"></iframe>
    
    <!-- Login formu ortada yer alıyor ve biraz sağa kaydırılmış durumda -->
    <div class="login-form">
        <!-- Logo ve yazıyı içeren bir container -->
        <div class="logo-container">
            <img src="again-logo.png" alt="Logo" class="login-logo" />
            <span class="logo-text">AGAIN</span>
        </div>
        <input type="text" placeholder="Kullanıcı Adı" @bind="username" />
        <input type="password" placeholder="Şifre" @bind="password" />
        <div class="remember-me">
            <input type="checkbox" id="rememberMe" @bind="rememberMe" />
            <label for="rememberMe">Beni Hatırla</label>
        </div>
        <button @onclick="Login">Giriş Yap</button>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <p class="error-message">@errorMessage</p>
        }
    </div>
</div>

<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden; /* Sayfada kaydırma çubuğu olmaması için */
        font-family: Arial, sans-serif;
    }

    .container {
        position: relative;
        width: 100%;
        height: 100vh; /* Tam ekran yüksekliği */
        display: flex;
        justify-content: center;
        align-items: center;
        background: transparent; /* Arka planı sayfa arka planından ayırmak için */
    }

    .background-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
        z-index: -1; /* Animasyonu arka planda en altta tutmak için */
    }

    .login-form {
        position: relative;
        width: 380px; /* Pencere genişliği ayarlandı */
        padding: 30px;
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        z-index: 1; /* Login penceresini üstte tutmak için */
        text-align: center; /* İçerikleri ortalama */
        transform: translateX(150px); /* Pencereyi sağa kaydırma */
    }

    .logo-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

    .login-logo {
        width: 200px; /* Logo genişliği ayarlandı */
        height: auto;
        margin-bottom: 10px; /* Logo ile yazı arasındaki boşluk */
    }

    .logo-text {
        font-size: 32px; /* Yazının büyüklüğü */
        color: #a0c4ff; /* Soft mavi renk */
        font-weight: bold;
        text-transform: uppercase; /* Büyük harflerle yazı */
    }

    .login-form input[type="text"],
    .login-form input[type="password"] {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: box-shadow 0.3s ease; /* Geçiş efekti */
    }

    .login-form input[type="text"]:hover,
    .login-form input[type="password"]:hover {
        box-shadow: 0 0 10px rgba(0, 0, 255, 0.7); /* Mavi ışık efekti */
    }

    .login-form .remember-me {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .login-form .remember-me input[type="checkbox"] {
        margin-right: 10px;
        accent-color: #0000ff; /* Checkbox'ın mavi renkte olması için */
    }

    .login-form .remember-me label {
        color: #000; /* Etiketin varsayılan rengi */
    }

    .login-form button {
        width: 100%;
        padding: 10px;
        border: none;
        background: #a4d4a7; /* Soft yeşil rengi */
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    .login-form button:hover {
        background: #8cbf8c; /* Hover efekti */
    }

    .error-message {
        color: #0000ff; /* Hata mesajının mavi olması */
        text-align: center;
    }
</style>

@code {
    private string username;
    private string password;
    private bool rememberMe;
    private string errorMessage;

    private void Login()
    {
        try
        {
            if (string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password))
            {
                errorMessage = "Kullanıcı adı ve şifre gerekli.";
                return;
            }

            // Simulated login logic here
            Console.WriteLine($"Kullanıcı Adı: {username}, Şifre: {password}, Beni Hatırla: {rememberMe}");
            errorMessage = ""; // Clear error message on successful login
        }
        catch (Exception ex)
        {
            errorMessage = $"Bir hata oluştu: {ex.Message}";
        }
    }
}
